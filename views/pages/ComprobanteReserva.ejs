                    </li>
                </ul>
                <ul class="list-group2">
                    <h5 class="card-title">Datos del huesped</h5>
                    <li class="list-group-item">Nombre:
                        <%= result.reserva.owner.nombre %>
                    </li>
                    <li class="list-group-item">Apellido:
                        <%= result.reserva.owner.apellido %>
                    </li>
                    <li class="list-group-item">Fecha de nacimiento:
                        <%= result.reserva.owner.fechaNacimiento %>
                    </li>
                    <li class="list-group-item">DNI:
                        <%= result.reserva.owner.dni %>
                    </li>
                    <li class="list-group-item">Telefono:
                        <%= result.reserva.owner.telefono %>
                    </li>
                    <li class="list-group-item">Domicilio:
                        <%= result.reserva.owner.domicilio %>
                    </li>
                    <li class="list-group-item">Nacionalidad:
                        <%= result.reserva.owner.nacionalidad %>
                    </li>
                </ul>
                </div>
            </div>
        <% } %>
        <a href="/">
        <button type="submit" class="btn">Finalizar</button>
        </a>
    </div>
</section>


